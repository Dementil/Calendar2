<form class="form-horizontal col-2 offset-1" id='adminform' name='adminform' action="/adminform" method="post">
  <div class="form-group">
  <h3>Create new event</h3>
    <label for="id_grp">Select the group number</label>
            <select type="number" id="id_grp" name="group" class="form-control">
              <option>1</option>
              <option>2</option>
            </select>
          </div>
          <div class="form-group">
            <label for="dt_start">Enter the start date</label>
            <input type="date" class="form-control" id="dt_start" name="start">
          </div>
          <div class="form-group">
            <label for="dt_end">Enter the end date</label>
            <input type="date" class="form-control" id="dt_end" name="end">
          </div>
          <div class="form-group">
            <label for="name">Enter event</label>
            <input type="text" class="form-control" id="name" placeholder="Enter event" name="name">
          </div>
          <div class="form-group">
            <label for="color">Select a color</label>
            <input type="color" id="color" name="color">
          </div>
  <div class="form-group">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-default" id='record'>Record</button>
      <button type="button" class="btn btn-default" id='clean'>Clean</button>
    </div>
  </div>
</form>